CXX=clang++-5.0
CXXFLAGS=-std=c++17

TEMPLATE_FORWARD=template_forward
TEMPLATE_EIF=template_enable_if

all: $(TEMPLATE_FORWARD) $(TEMPLATE_EIF)

$(TEMPLATE_FORWARD): $(TEMPLATE_FORWARD).cpp
	$(CXX) $(CXXFLAGS) $(TEMPLATE_FORWARD).cpp -o $(TEMPLATE_FORWARD)

$(TEMPLATE_EIF): $(TEMPLATE_EIF).cpp
	$(CXX) $(CXXFLAGS) $(TEMPLATE_EIF).cpp -o $(TEMPLATE_EIF)

clean:
	rm -f $(TEMPLATE_FORWARD) $(TEMPLATE_EIF)

